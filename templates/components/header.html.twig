{% if app.user %}
<div class="mb-3 w-full text-yellow-800 flex justify-between">
    <div class="ms-5">
        Connecté en tant que {{ app.user.firstname }} {% if app.user.roles == ["ROLE_USER"] %} <span
            class="text-yellow-700">(Utilisateur)</span>, <a href="{{ path('app_logout') }}" class="me-5 underline">Se déconnecter</a>
        {% endif %}
    </div>
    <div>
        {% if app.user.roles == ["ROLE_USER"] %}
        <div>
            <a href="/admin" class="underline me-5">Espace bénévole</a>
        </div>
        {% endif %}
    </div>
</div>
{% else %}
<div class="mb-3 text-right">
    <a href="/login">Se connecter</a>
</div>
{% endif %}
